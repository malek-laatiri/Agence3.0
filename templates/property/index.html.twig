{% block body %}
        <div class="container" style="
    margin-top: 50px;
">


            {{ form_start(form) }}
            <div class="container">

                <div class="row">


                    <label>type</label>
                <div class="col" >
                    {{ form_widget(form.token) }}
                </div>

                <label>categorie</label>
                <div class="col">
                    {{ form_widget(form.categ) }}
                </div>
